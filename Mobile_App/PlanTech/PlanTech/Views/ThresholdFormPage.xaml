                                            <xct:NumericValidationBehavior MaximumDecimalPlaces="0" xct:MultiValidationBehavior.Error="Value must be an integer"/>
                                        </xct:MultiValidationBehavior>
                                    </Editor.Behaviors>
                                </Editor>
                            </StackLayout>
                        </ViewCell>

                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="Low Temperature Level"/>
