<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanTech.App">
    <Application.Resources>
        <ControlTemplate x:Key="NoInternetBannerControlTemplate">
            <AbsoluteLayout BackgroundColor="#FF3E35" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"
                             Padding="0,10,0,15"
                             AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                    <Label Text="No Internet Connection" TextColor="White" FontSize="Medium" FontAttributes="Bold"/>
                    <Image Source="no_internet" Margin="0,2,0,0"/>
                </StackLayout>
            </AbsoluteLayout>
        </ControlTemplate>
    </Application.Resources>
</Application>